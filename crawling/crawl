#!/bin/bash

if [ $# -lt 1 ]; then
    echo "Usage: $0 <subdomains-file>"
    exit 1
fi

httpx -l $1 -o activesubs -threads 200 -status-code -follow-redirects -p 443,80,8888,8080,8443,8000 -fr 'Generated by cloudfront (CloudFront)'
 

cat $1 | gau --subs > urls.gau
cat $1 | katana > urls.katana
waymore -i $1 -oU urls.waymore -mode U

cat urls.* > urls

custom_wordlist.py urls > wordlist.custom_wordlist